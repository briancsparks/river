#!/bin/bash -e

#
# This runs on the instance
#

eval "$(cli-shezargs $@)"

# -----------------------------------------------------------------------------------
# Install and run our `telemetry` service
#

# git it
cd ~/dev && git clone https://github.com/briancsparks/river.git
cd river && npm install --production

# Get the telemetry server up and running
cd layer67-plugins/telemetry
pm2 start telemetry-router.js --name telemetry -- --port=3002 --color=${color} --stack=${stack}

# -----------------------------------------------------------------------------------
# Install and run our `ingest` service
#

# Get the ingest server up and running
cd layer67-plugins/ingest
pm2 start ingest-router.js --name ingest -- --port=3003 --color=${color} --stack=${stack}

