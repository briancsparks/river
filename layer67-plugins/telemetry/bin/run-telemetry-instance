#!/bin/bash -e

stack="cluster"

eval "$(cli-shezargs $@)"

[[ -z $color    ]] && die "Need --color="

if [[ $stack == prod ]]; then
  assumed_acct="pub"
fi

# Start an app instance with layer67
run-app-instance --stack=${stack} --delay-finishing
ip="$(cat /tmp/run-instance-result.json | jq -r .Instances[].PrivateIpAddress)"
instance_id="$(cat /tmp/run-instance-result.json | jq -r '.Instances[].InstanceId')"

aws-assumed-role "$assumed_acct" ec2 create-tags --resources "$instance_id" --tags "Key=Name,Value=${stack}-telemetry-instance" "Key=color,Value=${color}" "Key=stack,Value=${stack}"

# Deploy our code onto the new instance
zoom-run --ip=${ip} --label=telemetry --script="${scripts_dir}/on-instance/deploy-telemetry-instance" --color=${color} --stack=${stack}

run-final-app-instance-start-tasks --ip=${ip}

