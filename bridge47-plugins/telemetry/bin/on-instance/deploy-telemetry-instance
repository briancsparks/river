#!/bin/bash -e

#
# This runs on the instance
#

eval "$(cli-shezargs $@)"

# -----------------------------------------------------------------------------------
# Install and run our `telemetry` service
#

# git it
cd ~/dev && git clone https://github.com/briancsparks/river.git
cd river && npm install --production

# Get the telemetry server up and running
(cd ~/dev/river/layer67-plugins/telemetry && pm2 start telemetry-router.js --name telemetry -- --port=3002 --color=${color} --stack=${stack})

# Get the feed server up and running
(cd ~/dev/river/layer67-plugins/feed && pm2 start feed-router.js --name feed -- --port=3001 --color=${color} --stack=${stack})

